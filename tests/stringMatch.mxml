<?xml version="1.0"?>
<mx:Application name="lightspark_test_template"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	layout="absolute"
	applicationComplete="appComplete();"
	backgroundColor="white">

<mx:Script>
<![CDATA[
	private function appComplete():void {
		rect.graphics.beginFill(0x80ff60);
		rect.graphics.drawRect(30,0,150,100);
		rect.graphics.endFill();

		rect2.graphics.beginFill(0xff8060);
		rect2.graphics.drawRect(50,60,170,120);
		rect2.graphics.endFill();
		var str:String=new String("matchablemat");
		trace("Matching using string");
		var ret:Array=str.match("mat");
		trace("ret len "+ret.length);
		trace("ret[0] "+ret[0]);
		var re:RegExp=new RegExp("ma*t|a[a-z]*e","")
		trace("Matching using non global RegExp");
		ret=str.match(re);
		trace("ret len "+ret.length);
		trace("ret[0] "+ret[0]);
		
		var re2:RegExp=new RegExp("ma*t|a[a-z]*e","g")
		trace("Matching using global RegExp");
		ret=str.match(re2);
		trace("ret len "+ret.length);
		trace("ret[0] "+ret[0]);
		trace("ret[1] "+ret[1]);
		trace("ret[2] "+ret[2]);
	}
]]>
</mx:Script>

<mx:UIComponent id="rect" />
<mx:UIComponent id="rect2" />

</mx:Application>
